{
    "manifest_version":2,
    "name":"起点下载器",
    "version":"1.0.6",
    "description":"下载起点中文网/纵横中文网上的小说。已在github上开源，项目链接：https://github.com/lifegpc/qdbookdownload",
    "icons":
    {
        "16":"ico/16.png",
        "48":"ico/48.png",
        "128":"ico/128.png"
    },
    "browser_action":
    {
        "default_icon":
        {
            "19":"ico/19.png",
            "38":"ico/38.png"
        },
        "default_title":"起点下载器",
        "default_popup":"popup.html"
    },
    "author":"lifegpc",
    "permissions":["https://*.qidian.com/*","http://*.qidian.com/*","https://*.qdmm.com/*","http://*.qdmm.com/*","http://*.zongheng.com/*","https://*.zongheng.com/*","tabs","activeTab","storage"],
    "background":
    {
        "scripts":["js/background.js"]
    },
    "content_scripts":
    [{
        "matches":["https://vipreader.qidian.com/chapter/*","http://vipreader.qidian.com/chapter/*","https://read.qidian.com/chapter/*","http://read.qidian.com/chapter/*"],
        "js":["js/chapter.js"]
    },
    {
        "matches":["http://book.zongheng.com/chapter/*","https://book.zongheng.com/chapter/*"],
        "js":["js/zhremovead.js","js/zhchapter.js"]
    },
    {
        "matches":["http://book.qidian.com/info/*","https://book.qidian.com/info/*"],
        "js":["js/bookinfo.js"]
    },
    {
        "matches":["http://book.zongheng.com/book/*","https://book.zongheng.com/book/*"],
        "js":["js/zhremovead.js","js/zhbookinfo.js"]
    },
    {
        "matches":["http://book.zongheng.com/showchapter/*","https://book.zongheng.com/showchapter/*"],
        "js":["js/zhremovead.js","js/zhbookinfom.js"]
    },
    {
        "matches":["http://book.zongheng.com/orderchapter*","https://book.zongheng.com/orderchapter*"],
        "js":["js/zhremovead.js","js/zhbookinfoo.js"]
    },
    {
        "matches":["http://home.zongheng.com/show/userInfo/*","https://home.zongheng.com/show/userInfo/*","http://forum.zongheng.com/*","https://forum.zongheng.com/*","http://www.zongheng.com/*","https://www.zongheng.com/*","http://huayu.zongheng.com/*","https://huayu.zongheng.com/*","http://book.zongheng.com/store*","https://book.zongheng.com/store*"],
        "js":["js/zhremovead.js"]
    },
    {
        "matches":["https://www.qidian.com/free","http://www.qidian.com/free","https://www.qidian.com/mm/free","http://www.qidian.com/mm/free"],
        "js":["js/free.js"]
    },
    {
        "matches":["https://www.qidian.com/all*","http://www.qidian.com/all*","https://www.qidian.com/finish*","http://www.qidian.com/finish*","https://www.qidian.com/free/all*","http://www.qidian.com/free/all*","https://www.qidian.com/mm/all*","http://www.qidian.com/mm/all*","https://www.qidian.com/mm/finish*","http://www.qidian.com/mm/finish*","https://www.qidian.com/mm/free/all*","http://www.qidian.com/mm/free/all*"],
        "js":["js/book.js"]
    }],
    "options_page":"options.html"
}
